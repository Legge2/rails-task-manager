<h1>MY TASKS</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
        <li><input type="checkbox" checked > <%= link_to(task.title, task_path(task)) %> <%= link_to "- Delete", task_path(task), method: :delete, data: { confirm: "ARE YOU SURE ?"} %> </li>
    <% else %>
        <li><input type="checkbox"> <%= link_to(task.title, task_path(task)) %> <%= link_to "- Delete", task_path(task), method: :delete, data: { confirm: "ARE YOU SURE ?"} %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to " + Add Task" , new_task_path %>

